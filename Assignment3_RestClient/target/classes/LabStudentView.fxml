<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="481.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LabStudentViewController">
    <children>
        <TableView fx:id="labTable" editable="true" prefHeight="369.0" prefWidth="580.0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="numberCol" prefWidth="75.0" text="Lab number">
                    <cellValueFactory>
                        <PropertyValueFactory property="number" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title">
                    <cellValueFactory>
                        <PropertyValueFactory property="title" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="dateCol" prefWidth="75.0" text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="curriculaCol" prefWidth="75.0" text="Curricula">
                    <cellValueFactory>
                        <PropertyValueFactory property="curricula" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="descriptionCol" prefWidth="75.0" text="Description">
                    <cellValueFactory>
                        <PropertyValueFactory property="description" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </TableView>
        <HBox spacing="10.0">
            <children>
                <TextField fx:id="filterField" promptText="keyword">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
                <Button fx:id="filterBtn" mnemonicParsing="false" onAction="#filterBtnClicked" text="Filter">
                    <HBox.margin>
                        <Insets right="30.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="viewLabsBtn" mnemonicParsing="false" onAction="#viewBtnClicked" text="View all">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
            </VBox.margin>
        </HBox>
    </children>

</VBox>
