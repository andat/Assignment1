<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TeacherController">
   <children>
      <HBox spacing="20.0">
         <children>
            <Label prefHeight="27.0" prefWidth="174.0" text="SD Laboratory Application" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Button fx:id="logOutBtn" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#logOutBtnClicked" prefHeight="24.0" prefWidth="57.0" text="Log out" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <TabPane fx:id="teacherTabPane" prefWidth="459.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab fx:id="studentsTab" text="Students">
              <content>
                  <fx:include fx:id="studentView" source="StudentTableView.fxml" />
              </content>
            </Tab>
          <Tab fx:id="labsTab" text="Laboratory classes">
            <content>
                <fx:include fx:id="labView" source="LabTableView.fxml" />
            </content>
          </Tab>
            <Tab fx:id="attendanceTab" text="Attendance">
              <content>
                  <fx:include fx:id="attendanceView" source="AttendanceTableView.fxml" />
              </content>
            </Tab>
            <Tab fx:id="assignmentsTab" text="Assignments">
              <content>
                  <fx:include fx:id="assignView" source="AssignmentsTableView.fxml" />
              </content>
            </Tab>
            <Tab fx:id="submissionsTab" text="Submissions">
              <content>
                  <fx:include fx:id="submissionView" source="SubmissionTableView.fxml" />
              </content>
            </Tab>
        </tabs>
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </opaqueInsets>
      </TabPane>
   </children>
   <padding>
      <Insets bottom="10.0" />
   </padding>
</VBox>
